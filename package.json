{
  "name": "@mcp-z/server",
  "version": "1.0.3",
  "description": "Shared utilities and server orchestration for building MCP (Model Context Protocol) servers",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "server-utilities",
    "transport",
    "orchestration",
    "stdio",
    "http",
    "configuration",
    "error-handling",
    "ai",
    "claude",
    "framework"
  ],
  "homepage": "https://github.com/mcp-z/server#readme",
  "bugs": {
    "url": "https://github.com/mcp-z/server/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-z/server.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff.info@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -p . --noEmit && tsds build",
    "format": "tsds format",
    "prepublish:check": "ncp",
    "prepublishOnly": "tsds validate",
    "test": "npm run test:unit && npm run test:integration",
    "test:engines": "nvu engines tsds test:node --no-timeouts 'test/**/*.test.ts'",
    "test:integration": "tsds test:node --no-timeouts 'test/integration/**/*.test.ts'",
    "test:unit": "tsds test:node --no-timeouts 'test/unit/**/*.test.ts'",
    "version": "tsds version"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@mcp-z/client": "^1.0.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "get-port": "^7.1.0",
    "node-version-use": "^2.4.7",
    "supertest": "^7.1.4",
    "ts-dev-stack": "^1.22.1",
    "tsds-config": "^1.0.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "tsds": {
    "source": "src/index.ts"
  }
}
